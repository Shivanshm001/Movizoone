<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movizoone</title>
    <link rel="stylesheet" href="./public/style.css">

</head>

<body class="">
    <!-- Header  -->
    <%- include('header.ejs') %>
        <!-- Header end  -->

        <main class="bg-gray-100">
            <!-- Trending section  -->
            <section id="trending" class="py-12">
                <h1 class="p-6 px-8 text-2xl font-semibold">TRENDING</h1>
                <div class="flex overflow-y-hidden overflow-x-scroll gap-12 p-6 pb-20 scrollbar scrollbar-thumb-zinc-400 scrollbar-width-2 scrollbar-track-gray-300 border border-t-2 border-t-black">

                    <% movieDataArrays[0].forEach(data=> { %>
                        <a href="/singlemovie?id=<%= data.id %>" alt="<%= data.title %>" class=" border border-black hover:opacity-80 focus:opacity-80 shadow-md hover:shadow-none shadow-pink-400 bg-black ">   
                                <div class="min-w-[220px]  min-h-[300px] trending-card overflow-hidden">
                                    <%- `<img src="https://image.tmdb.org/t/p/original/${data.poster_path}"
                                        class="max-w-[220px] w-full h-max" alt="">` %>
                                        <p
                                            class="bg-black flex flex-col  text-white px-6 pb-2 pt-6">
                                            <span class="font-light text-lg">
                                                <%= data.title %>
                                            </span><span class="pt-3 pl-1 text-gray-700">
                                                <%= data.vote_average.toFixed(1) %>
                                            </span>
                                        </p>
                                        <span id="releaseDate" class="text-white text-opacity-75 text-center text-sm block font-light"><%= data.release_date %></span>
    
                                </div>
                            </a>
                    <% }); %>
                </div>
            </section>
            <!-- New released section  -->
            
            <section id="newrelease" class="py-12 border-t border-t-gray-600 bg-zinc-800">
                <h1 class="p-6 px-8 text-2xl font-semibold text-white underline underline-offset-4">NEW RELEASES</h1>
                <div class="flex overflow-y-hidden overflow-x-scroll gap-12 p-6 pb-20 scrollbar scrollbar-thumb-zinc-600 scrollbar-width-2 scrollbar-track-gray-900">

                    <% movieDataArrays[1].forEach(rdata=> { %>

                        <a href="/singlemovie?id=<%= rdata.id %>" alt="<%= rdata.title %>" class="border border-white rounded-lg bg-black">
                            <div class="min-w-[250px] min-h-full rounded-lg trending-card overflow-hidden">
                                <%- `<img src="https://image.tmdb.org/t/p/original/${rdata.poster_path}"
                                    class="max-w-[250px] max-h-[350px] w-full h-max" alt="">` %>
                                    <p
                                        class="bg-black flex justify-between items-center font-semibold text-white px-5 py-4 border-t border-t-white">
                                        <span class="font-light">
                                            <%= rdata.title %>
                                        </span><span class="">
                                            <%= rdata.vote_average.toFixed(2) %>
                                        </span>
                                    </p>
                                    <span id="releaseDate" class="text-white text-opacity-75 text-center text-sm block font-light"><%= rdata.release_date %></span>

                            </div>
                        </a>
                        <% }); %>
                </div>
            </section>

            <!-- Action section  -->
            <section id="action" class="py-12 border-t border-t-gray-600">
                <h1 class="p-6 px-8 text-2xl font-semibold text-white underline underline-offset-4">ACTION</h1>
                <div
                    class="flex overflow-y-hidden overflow-x-scroll gap-12 p-6 pb-20 scrollbar scrollbar-thumb-zinc-600 scrollbar-width-2 scrollbar-track-gray-900">
                    <% movieDataArrays[2].forEach(acdata=> { %>

                        <a href="/singlemovie?id=<%= acdata.id %>" alt="<%= acdata.title %>" class="border border-white rounded-lg bg-black">
                            <div class="min-w-[250px] min-h-full rounded-lg trending-card overflow-hidden">
                                <%- `<img src="https://image.tmdb.org/t/p/original/${acdata.poster_path}"
                                    class="max-w-[250px] max-h-[350px] w-full h-max" alt="">` %>
                                    <p
                                        class="bg-black flex justify-between items-center font font-semibold text-white px-5 py-4 border-t border-t-white">
                                        <span class="font-light">
                                            <%= acdata.title %>
                                        </span><span class="">
                                            <%= acdata.vote_average.toFixed(2) %>
                                        </span>
                                    </p>
                            </div>
                        </a>
                    <% }); %>
                
                    
                
                </div>
            </section>
            <!--  Animated Section  -->
            <section id="animated" class="py-12 border-t border-t-gray-600 bg-zinc-800">
                <h1 class="p-6 px-8 text-2xl font-semibold text-white underline underline-offset-4">ANIMATED </h1>
                <div
                    class="flex overflow-y-hidden overflow-x-scroll gap-12 p-6 pb-20 scrollbar scrollbar-thumb-gray-900 scrollbar-width-2 scrollbar-track-zinc-800">
                    
                    <% movieDataArrays[3].forEach(andata=> { %>

                        <a href="/singlemovie?id=<%= andata.id %>" alt="<%= andata.title %>" class="border border-white rounded-lg bg-black">
                            <div class="min-w-[250px] min-h-full rounded-lg trending-card overflow-hidden">
                                <%- `<img src="https://image.tmdb.org/t/p/original/${andata.poster_path}"
                                    class="max-w-[250px] max-h-[350px] w-full h-max" alt="">` %>
                                    <p
                                        class="bg-black flex justify-between items-center font font-semibold text-white px-5 py-4 border-t border-t-white">
                                        <span class="font-light">
                                            <%= andata.title %>
                                        </span><span class="">
                                            <%= andata.vote_average.toFixed(2) %>
                                        </span>
                                    </p>
                            </div>
                        </a>
                    <% }); %>
                </div>
            </section>
        </main>

        <!-- Footer  -->
        <%- include('./footer.ejs') %>
            <script src="./public/index.js"></script>
</body>

</html>